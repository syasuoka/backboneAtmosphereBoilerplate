/* ------------------ */
/*   Primary styles   */
/* ------------------ */

* {
  box-sizing: border-box;
}

body {
  font-family: 'Open Sans', sans-serif;
  margin: 0;
  padding: 0;
  background: $background_color;
}

a {
  text-decoration: none;
}

ul {
  margin: 0;
  padding: 0;
}

img {
  display: block;
  max-width: 100%;
}

h1 {
  margin: 0;
}

.container {
  max-width: 980px;
  margin: auto;
}

.btn {
  line-height: 2.5em;
  display: inline-block;
  text-align: center;
  text-transform: uppercase;
  border: none;
  font-size: 16px;
  color: white;
  background-color: #d24551;
  margin: 0 .5em;
  width: 8em;
  cursor: pointer;

  &:hover {
    background-color: #942E37;
  }
}

input.btn {
  color: black;

  &:hover {
    background: #ebebeb;
  }
}

/* ------------------ */
/*       Header       */
/* ------------------ */

header {
  background: $header_background;
  padding: 1.0em 0 .6em;
  margin-bottom: 10em /*3.5em*/;
  text-align: center;

  a {
    display: inline-block;
    border-top: 1px solid $header_logo_border;
    border-bottom: 1px solid $header_logo_border;
    padding: .2em;
    outline-width: 0;
  }
}

@media only screen and (max-width: 980px) {
  header {
    margin-bottom: 8em;
  }
  .container {
    margin: 0 1em;
  }
}

/* ------------------ */
/*      Toolbar       */
/* ------------------ */

.toolbar {
  text-align: center;
  border-bottom: 1px solid #DADADA;
  padding: 2em;
}
